<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.breakingbadapp.ui.main.CharacterListFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/action_mainFragment_to_characterFragment"
            app:destination="@id/characterFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.breakingbadapp.ui.main.CharacterFragment"
        android:label="character_fragment"
        tools:layout="@layout/character_fragment" >
        <argument
            android:name="char_id"
            app:argType="long" />
        <argument
            android:name="nickname"
            app:argType="string" />
        <argument
            android:name="dateOfBirth"
            app:argType="string" />
        <argument
            android:name="img"
            app:argType="string" />
        <argument
            android:name="portrayed"
            app:argType="string" />
        <argument
            android:name="occupation"
            app:argType="string[]" />
    </fragment>
</navigation>