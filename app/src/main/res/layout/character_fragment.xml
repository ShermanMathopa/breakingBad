<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.CharacterFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/male"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_label"
        style="@style/MaterialLightBody1Secondary"
        android:layout_width="194dp"
        android:layout_height="25dp"
        android:layout_marginTop="328dp"
        android:text="Nickname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nickname_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/character_name"
        style="@style/MaterialLightSubheadone"
        android:layout_width="191dp"
        android:layout_height="25dp"
        android:text="nickname"
        app:layout_constraintRight_toRightOf="@+id/name_label"
        app:layout_constraintStart_toStartOf="@+id/name_label"
        app:layout_constraintTop_toBottomOf="@+id/name_label" />

    <TextView
        android:id="@+id/nickname_label"
        style="@style/MaterialLightBody1Secondary"
        android:layout_width="194dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="64dp"
        android:text="DOB (Age)"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/characterImage"
        app:layout_constraintTop_toBottomOf="@+id/character_name" />

    <TextView

        android:id="@+id/character_nickname"
        style="@style/MaterialLightSubhead"
        android:layout_width="191dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:text="23-34-4444"
        app:layout_constraintRight_toRightOf="@+id/nickname_label"
        app:layout_constraintStart_toStartOf="@+id/nickname_label"
        app:layout_constraintTop_toBottomOf="@+id/nickname_label" />

    <TextView
        android:id="@+id/dob_label"
        style="@style/MaterialLightBody1Secondary"
        android:layout_width="194dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:text="Occupation"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nickname_label"
        app:layout_constraintTop_toBottomOf="@+id/character_nickname" />

    <TextView

        android:id="@+id/character_dob"
        style="@style/MaterialLightSubhead"
        android:layout_width="191dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="224dp"
        android:text="Teacher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/dob_label"
        app:layout_constraintStart_toStartOf="@+id/dob_label"
        app:layout_constraintTop_toBottomOf="@+id/dob_label"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/potrayed_label"
        style="@style/MaterialLightBody1Secondary"
        android:layout_width="194dp"
        android:layout_height="25dp"
        android:layout_marginTop="84dp"
        android:text="Potrayed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nickname_label"
        app:layout_constraintTop_toBottomOf="@+id/character_nickname" />

    <TextView

        android:id="@+id/character_potrayed"
        style="@style/MaterialLightSubhead"
        android:layout_width="191dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="Bruce mang mang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/dob_label"
        app:layout_constraintStart_toStartOf="@+id/dob_label"
        app:layout_constraintTop_toBottomOf="@+id/dob_label"
        app:layout_constraintVertical_bias="0.376" />


</androidx.constraintlayout.widget.ConstraintLayout>